<%- include("partials/header.ejs")%>
<%- include("partials/navbar.ejs")%>

<style>
body {
	background-image: url('<%=pics.URL%>');
	background-repeat: no-repeat;
  	background-attachment: fixed;
	background-size: cover;
	
}
</style>

<div class="container" style="background-color:rgba(0,0,0,0.6); max-width:60vw; padding:20px">
	<div class="row">
		<h1>&nbsp;&nbsp;&nbsp;&nbsp;Editing: <%=pics.title%></h1>
		
		<div style="margin: 30px; width: 100%; height: 100%;">
			<form action="/pics/<%=pics._id%>?_method=PUT" method="POST">
			
				<div class="form-group">
					    	<div class="col-sm-12">

					<a>title</a>
					<input class="form-control" type="text" value='<%=pics.title%>' name="pics[title]">
					</div>
				</div>
				
				<div class="form-group">
					    	<div class="col-sm-12">

					<a>URL</a>
					<input class="form-control" type="text" value='<%=pics.URL%>' name="pics[URL]">
					</div>
				</div>
				
				<div class="form-group">
					    	<div class="col-sm-12">

					<a>description</a>
					<input class="form-control" type="text" value='<%=pics.description%>' name="pics[description]">
					</div>
				</div>
				
				<div class="form-group">
    				<div class="col-sm-12">
						<a>description Long</a>
						<textarea class="form-control" rows="3"  name="pics[descriptionLong]"><%=pics.descriptionLong%></textarea>
   					</div>
  				</div>
			
				
				
				<div class="form-group">
					    				<div class="col-sm-12">

					<button class="btn btn-lg btn-primary">submit</button>
					</div>
				</div>
			
			</form>
		
		</div>

</div>
</div>




<%- include("partials/footer.ejs")%>