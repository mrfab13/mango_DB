<form action="/pics" method="POST">
	<input type="text" placeholder="Title" name="title"/>
	<input type="text" placeholder="image Url" name="URL"/>
	<input type="text" placeholder="description" name="description"/>

	<button>add</button>
	
</form>



<% for (var i = 0; i < pics.length; i++){%> 
	<div class= "col-md-3 col-sn-6">
		<div class="thumbnail" style="border-color: #333333; background-color:#121212; border-width:5px; border-style: solid; margin: 10px;">
			<img src= '<%=pics[i].URL%>' width="auto" height="500px" style="width:auto;height:auto; max-width:100%;max-height:100%;margin:auto;" />
			
			<div>
				<h4>
					<%=pics[i].title%> 
				</h4> 
			</div>
			
			<div>
				<h6>
					<%=pics[i].author.username%>
				</h6> 
			</div>
			
			
			
			<a class="btn btn-xs btn-warning" href="/pics/<%=pics[i]._id%>">
				show More
			</a>			

		</div>
	</div>
<% }%> 


<script>
function redirect(id) {
	var str = "/pics/" + id;
	return (str);
}
</script>




