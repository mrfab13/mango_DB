<%- include("partials/header.ejs")%>
<%- include("partials/navbar.ejs")%>


<form action="/pics" method="POST">
	<input type="text" placeholder="Title" name="title"/>
	<input type="text" placeholder="image Url" name="URL"/>
	<input type="text" placeholder="description" name="description"/>
	<input type="text" placeholder="description long" name="descriptionLong"/>

	<button>add</button>
	
</form>

<div class="row no-gutters">

<% for (var i = 0; i < pics.length; i++){%>

	<div class= "col-6 col-sm-auto">

		<div class="thumbnail" style="border-color: #333333; background-color:#121212; height:100%;width:100%;border-width:5px; border-style: solid; ">
			<img src='<%=pics[i].URL%>' style="width:auto;height:20vw;max-width:100%;margin:auto;" />
			
			<div>
				<h4>
					<%=pics[i].title%> 
				</h4> 
			</div>
			
			<div>
				<h6>
					by: <%=pics[i].author.username%>
				</h6> 
			</div>
			
			<div>
				<h7>
					<%=pics[i].description%>
				</h7> 
			</div>
			
			
			<a class="btn btn-xs btn-warning" href="/pics/<%=pics[i]._id%>">
				show More
			</a>			

		</div>
	</div>
<%}%>
	</div>




<script>
function redirect(id) {
	var str = "/pics/" + id;
	return (str);
}
</script>




